@model IEnumerable<TravelApp.Domain.DomainModels.Country>

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<p>
    <a asp-action="Create" class="btn btn-dark btn-sm">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISO2Code)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISO2Code)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="Info" asp-route-ISO2Code="@item.ISO2Code" class="btn btn-dark btn-sm"> Get More Info </a> 
                    <a asp-action="CountryFlag" asp-route-ISO2Code="@item.ISO2Code" class="btn btn-dark btn-sm"> See the Country Flag </a>
            </td>
        </tr>
}
    </tbody>
</table>
